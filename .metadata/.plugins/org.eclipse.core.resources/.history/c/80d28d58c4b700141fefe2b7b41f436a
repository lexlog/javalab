package first_task;

public class det {
	public static void main(String[] args) {
		int[][] A,B;
		int n=4;
		A = new int[n][n];
		B = new int[n][n];
		
		int k=1;
		for(int i=0;i<n;i++) {
			for(int j=0;j<n;j++){
				A[i][j]=i;
				B[i][j]=0;
				k++;
				System.out.print(A[i][j] + " ");
			}
			System.out.println();
		}
		
		
		
		for(int l=0;l<n-1;l++) {
				for(int i=l+1;i<n;i++) {
					for(int j=l;j<n;j++){
						B[i][j]=A[i][j]-A[l][j]*A[i][l]/A[l][l];
					}
				}	
		}
		
		System.out.println();
		for(int i=0;i<n;i++) {
			for(int j=0;j<n;j++){
				System.out.print(B[i][j] + " ");
			}
			System.out.println();
		}
	}

}
